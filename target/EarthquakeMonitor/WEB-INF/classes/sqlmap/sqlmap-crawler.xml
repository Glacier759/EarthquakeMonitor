<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.glacier.earthquake.monitor.server.util.MysqlOperation">
    <resultMap id="spider_info" type="SpiderInfo">
        <result column="id" property="id" />
        <result column="url" property="url" />
        <result column="title" property="title" />
        <result column="source" property="source" />
        <result column="type" property="type" />
        <result column="rule_id" property="rule_id" />
        <result column="create_date" property="create_date" />
        <result column="status" property="status" />
    </resultMap>

    <select id="getSpiderInfoList" resultMap="spider_info">
        SELECT * FROM spider_information;
    </select>

    <select id="getSpiderInfos_Type" parameterType="int" resultMap="spider_info">
        SELECT * FROM spider_information WHERE type = #{type};
    </select>

    <select id="getSpiderInfos_TypeAndStatus" parameterType="SpiderInfo" resultMap="spider_info">
        SELECT * FROM spider_information WHERE type = #{type} AND status = #{status};
    </select>
    
    <update id="approvedThrough" parameterType="SpiderInfo">
        UPDATE spider_information SET status = '1' WHERE id = #{id};
    </update>

    <insert id="insertSpiderInfo" parameterType="SpiderInfo">
        INSERT INTO spider_information( url, title, source, type, rule_id, status )
                                VALUES( #{url}, #{title}, #{source}, #{type}, #{rule_id}, #{status} );
    </insert>

    <delete id="deleteSpiderInfo" parameterType="SpiderInfo">
        DELETE FROM spider_information WHERE id = #{id};
    </delete>


</mapper>