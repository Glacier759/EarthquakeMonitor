<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.glacier.earthquake.monitor.server.util.MysqlOperation">
    <resultMap id="SystemStatus" type="SystemStatus">
        <result column="id" property="id" />
        <result column="create_date" property="create_date" />
        <result column="status" property="status" />
    </resultMap>

    <insert id="insertSystemStatus" parameterType="Integer">
        INSERT INTO system_status(status) values(#{status});
    </insert>

    <select id="getSystemStatus" resultMap="SystemStatus">
        SELECT * FROM system_status ORDER BY create_date DESC LIMIT 1;
    </select>

</mapper>